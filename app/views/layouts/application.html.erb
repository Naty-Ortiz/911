<!DOCTYPE html>
<html>
<head>
  <title>Sistema de Registro de Denuncias 911</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>


  <%= csrf_meta_tags %>
<!--  <script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=ge??ometry&language=&hl=&region="></script>
-->

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3&key=
AIzaSyDJCxMIk3GTjMB77nK64W9DosMwb6w5oe0&libraries=places"
  type="text/javascript"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
  <%= favicon_link_tag('icons/escudo-cochabamba.ico') %>

  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
</head>
<body class="skin-black <%= if user_signed_in? then 'sidebar-mini' else 'sidebar-collapse' end %>">

<div class="wrapper">

  <!-- Main Header -->
  <header class="main-header">

    <!-- Logo -->
    <a href="/" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><sub>911</sub></span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>911</b></span>
    </a>

    <!-- Header Navbar -->
    <nav class="navbar navbar-static-top" role="navigation">
      <!-- Sidebar toggle button-->
      <% if user_signed_in? %>
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>
      <% end %>
      <!-- Navbar Right Menu -->
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <!-- User Account Menu -->
          <li class="user user-menu">
            <%if user_signed_in? %>
              <li>
                <a href="/users/edit">
                  <i class="fa fa-fw fa-user"></i>
                  <span class="hidden-xs"><%= current_user.person.first_name %>&nbsp;<%= current_user.person.last_name %></span>
                </a>
              </li>

              <li>
                <a id="sign-out" rel="nofollow" href="/logout">
                  <i class="fa fa-fw fa-lock"></i>Cerrar Sesion
                </a>
              </li>
          <%end%>

        </ul>
      </div>
    </nav>
  </header>
  <!-- Left side column. contains the logo and sidebar -->
  <% if user_signed_in? %>
      <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar" id="main-sidebar">
          <!-- Sidebar Menu -->
          <ul class="sidebar-menu">
            <% if current_user.role == 1 %>
              <li style="color: #4db8b2;" class="header main-sidebar-header"><i class="fa fa-gears"></i>&nbsp;&nbsp;<strong>ADMINISTRADOR</strong></li>
            <!-- USUARIOS -->
              <li class="treeview">
                <a href="#"><i class="fa fa-users"></i> <span>Usuarios</span> <i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu" style="display: none;">
                  <li><a href="/users"><i class="fa fa-list"></i>Ver Lista</a></li>
                </ul>
              </li>
            <!-- FIN USUARIOS -->
            <!-- ROLES -->
            <!--   <li class="treeview">
                <a href="#"><i class="fa fa-object-group"></i> <span>Roles</span> <i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu" style="display: none;">
                  <li><a href="/roles/new"><i class="fa fa-plus"></i>Registrar </a></li>
                  <li><a href="/roles"><i class="fa fa-list"></i>Ver Lista</a></li>
                </ul>
              </li>-->
            <!-- FIN ROLES -->
            <!-- EMPLEADOS -->
              <li class="treeview">
                <a href="#"><i class="fa fa-file-text-o"></i> <span>Funcionarios</span> <i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu" style="display: none;">
                  <li><a href="/employees/new"><i class="fa fa-plus"></i>Registrar </a></li>
                  <li><a href="/employees"><i class="fa fa-list"></i>Ver Lista</a></li>
                </ul>
              </li>
            <!-- FIN EMPLEADOS -->
                <hr>
                <!-- LISTAS DE VERIFICACION -->
                <li class="treeview">
                  <a href="#"><i class="fa fa-star"></i> <span>Denuncias</span> <i class="fa fa-angle-left pull-right"></i></a>
                      <ul class="treeview-menu" style="display: none;">
                        <li><a href="/complains/new"><i class="fa fa-plus"></i>Registrar </a></li>
                        <li><a href="/complains"><i class="fa fa-list"></i>Ver Lista</a></li>
                      </ul>
                </li>
                <li class="treeview">
                  <a href="#"><i class="fa fa-star"></i> <span>Administrar Delito</span> <i class="fa fa-angle-left pull-right"></i></a>
                      <ul class="treeview-menu" style="display: none;">
                        <li><a href="/crimes/new"><i class="fa fa-plus"></i>Registrar </a></li>
                        <li><a href="/crimes"><i class="fa fa-list"></i>Ver Lista</a></li>
                      </ul>
                </li>
                <li class="treeview">
                  <a href="#"><i class="fa fa-star"></i> <span>Administrar Contraversiones</span> <i class="fa fa-angle-left pull-right"></i></a>
                      <ul class="treeview-menu" style="display: none;">
                        <li><a href="/contravertions/new"><i class="fa fa-plus"></i>Registrar </a></li>
                        <li><a href="/contravertions"><i class="fa fa-list"></i>Ver Lista</a></li>
                      </ul>
                </li>
                <li class="treeview">
                  <a href="#"><i class="fa fa-star"></i> <span>Administrar Unidades de patrulla</span> <i class="fa fa-angle-left pull-right"></i></a>
                      <ul class="treeview-menu" style="display: none;">
                        <li><a href="/patrol_units/new"><i class="fa fa-plus"></i>Registrar </a></li>
                        <li><a href="/patrol_units"><i class="fa fa-list"></i>Ver Lista</a></li>
                      </ul>
                </li>
            <%end%>
            <!-- @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@  CAPITAN @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ -->
            <% if current_user.role == 2 %>
                <li style="color: #4db8b2;" class="header main-sidebar-header"><i class="fa fa-secret"></i>&nbsp;&nbsp;<strong>CAPITAN</strong></li>
                <!-- ROLES -->

                <li class="treeview">
                  <a href="#"><i class="fa fa-star"></i> <span>Denuncias</span> <i class="fa fa-angle-left pull-right"></i></a>
                      <ul class="treeview-menu" style="display: none;">
                        <li><a href="/complains/new"><i class="fa fa-plus"></i>Registrar </a></li>
                        <li><a href="/complains"><i class="fa fa-list"></i>Ver Lista</a></li>
                      </ul>
                </li>

            <%end%>
                <!-- @@@@@@@@@@@@@@@@@@@@@ Oficial de turno -->
              <% if current_user.role == 3%>
                <li style="color: #4db8b2;" class="header main-sidebar-header"><i class="fa fa-user-phone"></i>&nbsp;&nbsp;<strong>OFICIAL DE TURNO </strong></li>
                <li class="treeview">
                  <a href="#"><i class="fa fa-building"></i> <span>Denuncias</span> <i class="fa fa-angle-left pull-right"></i></a>
                  <ul class="treeview-menu" style="display: none;">
                    <li><a href="/complains"><i class="fa fa-list"></i>Ver Lista</a></li>
                  </ul>
                </li>


            <%end%>


          </ul><!-- /.sidebar-menu -->
        </section>
        <!-- /.sidebar -->
      </aside>
  <% end %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper white-wall" style="min-height: 378px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">

    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-10">
            <%= yield %>
          </div>
          <div class="col-md-1"></div>
      </div>
    </section><!-- /.content -->
  </div><!-- /.content-wrapper -->

  <!-- Main Footer -->
  <footer class="main-footer" style="max-height: 60px">
    <!-- To the right -->
    <div class="pull-right hidden-xs">
      <strong> Nataly Ortiz </strong>
    </div>
    <!-- Default to the left -->
    <strong>  <a href="https://www.ucbcba.edu.bo/"><%= image_tag( 'logo-UCB.png', { height: '40px', width: '30px' } ) %> Universidad Cat&oacute;lica Boliviana "San Pablo"</a> <%= Date.today.year %> </strong> Cochabamba
  </footer>

  <!-- Control Sidebar -->

  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
  <div class="control-sidebar-bg" style="position: fixed; height: auto;"></div>
</div><!-- ./wrapper -->
</body>
</html>
